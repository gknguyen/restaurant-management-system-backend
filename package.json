{
  "name": "restaurant-management-system-backend",
  "version": "1.0.0",
  "private": true,
  "description": "Restaurant management app backend",
  "author": "Giang Nguyen",
  "license": "ISC",
  "scripts": {
    "start:dev": "cross-env NODE_ENV=development DEBUG=restaurant_management_system:server ts-node-dev --respawn --transpile-only ./src/server --watch ./src",
    "start:prod": "cross-env NODE_ENV=production DEBUG=restaurant_management_system:server node ./lib/server.js",
    "build": "cross-env NODE_ENV=production tsc",
    "ci:prod": "npm ci --only=production --ignore-scripts && node-prune",
    "postinstall": "husky install && npx husky add .husky/pre-commit \"npm run review\" && npx husky add .husky/pre-push \"npm run test\"",
    "test": "mocha ./src/test/**/*.test.ts --reporter-options reportDir=.reports/tests --reporter-options jsonReport=true",
    "test:cov": "nyc mocha ./src/test/**/*.test.ts --reporter-options reportDir=.reports/tests --reporter-options jsonReport=true",
    "complex": "ts-plato --recurse --quiet --eslint ./.eslintrc --noempty --dir ./.reports/complex ./src",
    "format": "prettier --write ./src/**/*.ts",
    "lint": "eslint --quiet ./src --ext .js,.ts",
    "review": "concurrently \"npm run format\" \"npm run lint\""
  },
  "dependencies": {
    "compression": "^1.7.4",
    "concurrently": "^6.2.0",
    "config": "^3.3.0",
    "cookie-parser": "^1.4.4",
    "cross-env": "^6.0.3",
    "crypto-js": "^4.0.0",
    "debug": "~4.1.1",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-jwt": "^5.3.1",
    "express-rate-limit": "^5.3.0",
    "express-session": "^1.17.0",
    "helmet": "^3.22.0",
    "http": "0.0.0",
    "http-status": "^1.4.2",
    "moment": "^2.24.0",
    "moment-timezone": "^0.5.28",
    "morgan": "^1.9.1",
    "multer": "^1.4.2",
    "mysql2": "^2.1.0",
    "node-prune": "^1.0.2",
    "sequelize": "^6.6.5"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
    "@types/compression": "^1.7.0",
    "@types/config": "0.0.36",
    "@types/cookie-parser": "^1.4.2",
    "@types/crypto-js": "^4.0.2",
    "@types/debug": "^4.1.5",
    "@types/express": "^4.17.3",
    "@types/express-jwt": "0.0.42",
    "@types/express-rate-limit": "^5.1.3",
    "@types/express-session": "^1.17.0",
    "@types/helmet": "^0.0.45",
    "@types/jsonwebtoken": "^8.5.4",
    "@types/mocha": "^8.2.3",
    "@types/moment-timezone": "^0.5.13",
    "@types/morgan": "^1.9.0",
    "@types/multer": "^1.4.2",
    "@types/node": "^13.9.1",
    "@types/validator": "^13.1.0",
    "@typescript-eslint/eslint-plugin": "^4.28.3",
    "@typescript-eslint/parser": "^4.28.3",
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "eslint": "^7.30.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-flowtype": "^5.8.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-unicorn": "^33.0.1",
    "husky": "^7.0.1",
    "mocha": "^7.1.1",
    "mochawesome": "^6.2.2",
    "mochawesome-screenshots": "^1.7.3",
    "nyc": "^15.1.0",
    "prettier": "^2.0.5",
    "ts-node": "^8.6.2",
    "ts-node-dev": "^1.0.0-pre.44",
    "ts-plato": "^0.0.6",
    "typescript": "^3.8.3"
  }
}
