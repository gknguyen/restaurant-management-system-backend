{
  "defaultSeverity": "error",
  // "extends": ["tslint:recommended"],
  "jsRules": {},
  "rules": {
    /** variable declarations */
    "ban-types": [true, ["Object", "Use {} instead."], ["String"]],
    "prefer-const": true,
    "no-var-keyword": true,
    "variable-name": {
      "options": [
        "ban-keywords",
        "check-format",
        "require-const-for-all-caps",
        "allow-pascal-case"
      ]
    },

    /** classes & interfaces */
    "class-name": true,
    "interface-name": false,

    /** conditions */
    "switch-default": true,
    "no-duplicate-switch-case": true,

    /** others */
    "object-literal-sort-keys": false,
    "prefer-for-of": true,
    "no-eval": true,
    "triple-equals": true,
    "deprecation": true,
    "binary-expression-operand-order": true
  },
  "rulesDirectory": []
}
